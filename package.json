{
  "name": "uzbekistan-schools-platform",
  "version": "1.0.0",
  "description": "Enterprise-grade, privacy-first, multi-tenant, offline-first Flutter platform for Uzbekistan schools",
  "private": true,
  "scripts": {
    "migrate": "node scripts/migrate.js",
    "seed": "node scripts/seed.js",
    "test:rls": "node scripts/test-rls.js",
    "setup": "node scripts/setup.js",
    "build": "cd teacher && npm run build",
    "install": "cd teacher && npm install",
    "prepare": "husky"
  },
  "lint-staged": {
    "backend/**/*.js": [
      "npx eslint --fix --config backend/.eslintrc.cjs"
    ],
    "admin/src/**/*.{js,jsx}": [
      "npx eslint --fix --config admin/.eslintrc.cjs"
    ],
    "teacher/src/**/*.{js,jsx}": [
      "npx eslint --fix --config teacher/.eslintrc.cjs"
    ],
    "reception/src/**/*.{js,jsx}": [
      "npx eslint --fix --config reception/.eslintrc.cjs"
    ],
    "super-admin/src/**/*.{js,jsx}": [
      "npx eslint --fix --config super-admin/.eslintrc.cjs"
    ],
    "government/src/**/*.{js,jsx}": [
      "npx eslint --fix --config government/.eslintrc.cjs"
    ]
  },
  "keywords": [
    "education",
    "schools",
    "multi-tenant",
    "flutter",
    "nestjs",
    "privacy"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "devDependencies": {
    "eslint": "^8.57.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7"
  }
}
